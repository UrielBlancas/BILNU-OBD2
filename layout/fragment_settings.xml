<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".fragments.settingsFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/blueOne"
        android:textStyle="bold"
        android:text="Configuración"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        />

    <Button
        android:id="@+id/config_botonconectar"
        android:layout_marginTop="30dp"
        android:layout_width="248dp"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/ic_about"
        android:text="@string/como_conectar" />

    <TextView
        android:id="@+id/howToConnectTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/white"
        android:background="@color/blueOne"
        android:visibility="gone"
        />

    <TextView
        android:layout_marginTop="15dp"
        android:layout_marginLeft="-70dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tipo de conexión"
        android:textColor="@color/black" />
    <Button
        android:id="@+id/config_botonbluetooth"
        android:layout_width="248dp"
        android:layout_height="wrap_content"
        android:drawableRight="@mipmap/ic_bluetooth1"
        android:text="@string/bluetooth" />

    <TextView
        android:layout_marginLeft="-65dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Empezar conexión:"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/config_botonbuscar"
        android:layout_width="248dp"
        android:layout_height="wrap_content"
        android:drawableRight="@mipmap/ic_seleccion1"
        android:text="CONECTAR A OBD2" />

</LinearLayout>